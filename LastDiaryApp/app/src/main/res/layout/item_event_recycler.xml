<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:backgroundTint="#754747"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="10dp"
        android:layout_gravity="center"
        android:id="@+id/diary_info_item"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="end|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/itemIMG"
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:textColor="#DDDFFD"
                android:id="@+id/itemDateEvent"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="10-11\n 2019"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="14dp"
                android:textColor="#DDDFFD"
                android:id="@+id/itemTimeEvent"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:text="07:00AM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#DDDFFD"
                android:id="@+id/itemNhacNho"
                android:textStyle="bold"
                android:text="Nhắc nhở"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#60E96F"
                android:id="@+id/itemTitleEvent"
                android:textSize="15dp"
                android:layout_marginTop="2dp"
                android:textStyle="italic"
                android:text="Hello........................"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:backgroundTint="#CE1717"
                    android:src="@drawable/ic_time_12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#DDDFFD"
                    android:id="@+id/itemTimeCreate"
                    android:textSize="10dp"
                    android:text="07:00 AM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_add_alert_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#DDDFFD"
                    android:id="@+id/itemCreatedate"
                    android:textSize="10dp"
                    android:text="20/11/2019"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/thongbaoiconring"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/ic_notifications_off_black_12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>