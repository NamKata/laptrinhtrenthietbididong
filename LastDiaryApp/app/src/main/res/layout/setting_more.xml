<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_gravity="center"
    android:layout_height="600dp">
    <ImageButton
        android:backgroundTint="@color/colorTint"
        android:layout_margin="5dp"
        android:id="@+id/closeSetMore"
        android:layout_gravity="left"
        android:src="@drawable/ic_close_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="@string/khong_cho_phep_cai_mat_khau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Switch
            android:backgroundTint="#A30D0D"
            android:id="@+id/onOffpass"
            android:layout_gravity="center_vertical"
            android:scrollbarSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="@string/kh_ng_th_c_hi_n_ch_c_n_ng_n_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Switch
            android:id="@+id/khoachucnangnoi"
            android:layout_gravity="center_vertical"
            android:scrollbarSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="Không cho phép cài mật khẩu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Switch
            android:layout_gravity="center_vertical"
            android:scrollbarSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="Không cho phép cài mật khẩu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Switch
            android:layout_gravity="center_vertical"
            android:scrollbarSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>