<!--        <ImageView-->
<!--            android:layout_margin="2dp"-->
<!--            android:id="@+id/viewPhotoDiary"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:src="@null" />-->

<!--    </androidx.cardview.widget.CardView>-->

    <LinearLayout
        android:id="@+id/goc"
        android:gravity="center_horizontal|center_vertical"
        android:layout_below="@id/ll3"
        android:background="@drawable/bg_view"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/btnLock"
            android:layout_marginRight="100dp"
            android:background="@null"
            android:tint="@android:color/white"
            android:src="@drawable/ic_lock_black_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/btnicon"
            android:background="@null"
            android:src="@drawable/ic_mic_black_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/btnChoose"
            android:layout_marginLeft="100dp"
            android:background="@null"
            android:src="@drawable/ic_broken_image_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnClose"
            android:text="@string/dong"
            android:drawableLeft="@drawable/ic_close_36dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="7dp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginLeft="7dp"
            android:id="@+id/btnSaveAdd"
            android:text="@string/luu"
            android:drawableRight="@drawable/ic_done_36dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>